<!DOCTYPE html>
<html>
<head>
  <title>Chamber</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <style type="text/css">
    body {
      padding-top: 60px;
      padding-bottom: 40px;
    }
    .sidebar-nav {
      padding: 9px 0;
    }
  </style>

</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="brand" href="/">Chamber</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><a href="<%= rooms_path %>">Rooms</a></li>
          </ul>
          <% if current_user %><p class="navbar-text pull-right">Logged in as <a href="#"><%= current_user.full_name %></a></p><% end %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  
  <% if notice or alert %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% end %>

  <div class="container-fluid">
    <%= yield %>
    <hr>
  </div><!--/.fluid-container-->

  <script>
    <% if @room %>
    var room = new Chamber.Models.Room(<%= @room.to_json.html_safe %>)
    <% else %>
    var room = undefined
    <% end %>
  </script>

</body>
</html>